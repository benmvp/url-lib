{
  "name": "url-lib",
  "version": "1.0.0",
  "description": "A simple, lightweight string utility for Node and browsers that supports serializing and parsing URLs and query strings.",
  "main": "./url-lib.js",
  "scripts": {
    "build": "npm run minify && npm run gzip",
    "gzip": "gzip -c dist/url-lib.min.js > dist/url-lib.min.js.gz",
    "lint": "eslint .",
    "minify": "mkdir -p dist && uglifyjs --compress --mangle --comments --output dist/url-lib.min.js url-lib.js",
    "test": "mocha tests/*.js",
    "test-coverage": "istanbul cover _mocha -- -R spec tests/*.js",
    "test-coverage-ci": "istanbul cover _mocha --report lcovonly -- -R spec tests/*.js",
    "validate": "npm run lint && npm run test",
    "validate-ci": "npm run lint && npm run test-coverage-ci"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benmvp/url-lib.git"
  },
  "keywords": [
    "url",
    "serialization",
    "parse",
    "query",
    "querystring",
    "resolve"
  ],
  "author": "Ben Ilegbodu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/benmvp/url-lib/issues"
  },
  "homepage": "https://github.com/benmvp/url-lib#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "coveralls": "^2.11.9",
    "eslint": "^2.4.0",
    "istanbul": "^0.4.2",
    "lodash": "^4.6.1",
    "mocha": "^2.4.5",
    "pre-commit": "^1.1.2",
    "uglify-js": "^2.6.2"
  },
  "engines": {
    "node": ">=0.10"
  },
  "pre-commit": [
      "validate"
  ]
}
