{
    "env": {
        "amd": true,
        "browser": true,
        "mocha": true,
        "node": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "rules": {
        "brace-style": [2, "stroustrup"],
        "camelcase": 2,
        "comma-dangle": 2,
        "comma-spacing": 2,
        "curly": 2,
        "eqeqeq": [2, "smart"],
        "indent": 2,
        "key-spacing": 2,
        "new-parens": 2,
        "newline-after-var": 2,
        "no-multi-spaces": 2,
        "no-native-reassign": 2,
        "no-param-reassign": 2,
        "no-shadow": 2,
        "no-use-before-define": 2,
        "no-whitespace-before-property": 2,
        "object-curly-spacing": 2,
        "one-var-declaration-per-line": 2,
        "operator-assignment": 2,
        "operator-linebreak": [2, "before"],
        "quotes": [2, "single"],
        "space-before-blocks": 2,
        "space-before-function-paren": [2, "never"],
        "semi": 2,
        "valid-jsdoc": 2
    }
}
