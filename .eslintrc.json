{
    "env": {
        "amd": true,
        "browser": true,
        "mocha": true,
        "node": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "rules": {
        "brace-style": [2, "stroustrup"],
        "camelcase": 2,
        "curly": 2,
        "eqeqeq": [2, "smart"],
        "indent": 2,
        "key-spacing": 2,
        "newline-after-var": 2,
        "no-param-reassign": 2,
        "no-shadow": 2,
        "no-use-before-define": 2,
        "object-curly-spacing": 2,
        "prefer-rest-params": 2,
        "quotes": [2, "single"],
        "space-before-blocks": 2,
        "semi": 2,
        "valid-jsdoc": 2
    }
}
